<script>
//____________________RETTANGOLO__________________________//
var base = prompt("inserisci la base del rettangolo","");
var altezza = prompt("inserisci l'altezza del rettangolo","")

var arearettangolo = base * altezza;
var perimetrorettangolo = 2 * (base + altezza);


//Output rettangolo
area.innerHTML = arearettangolo;
perimetro.innerHTML = perimetrorettangolo;


//________________________CERCHIO____________________//
var raggio = prompt("inserisci il raggio del cerchio","")

var perimetrocerchio =  C = 2 * Math.PI * raggio;
var areacerchio = Math.PI * raggio * 2;

//Output cerchio
perimetro2.innerHTML = perimetrocerchio.toFixed(2);
area2.innerHTML =areacerchio.toFixed(2);


//_____________TRIANGOLO EQUILATERO____________//
var lato = prompt("inserisci il lato del triangolo equilatero","")

var areatriangoloEQ = (Math.pow(lato, 2) * Math.sqrt(3)) / 4;
var perimetrotriangoloEQ = 3 * lato

//Output triangoloEQ
area3.innerHTML = areatriangoloEQ;
perimetro3.innerHTML = perimetrotriangoloEQ;

